   <name>Sakai Profilewow Tool</name>
   <groupId>org.sakaiproject.profilewow</groupId>
   <artifactId>profilewow-tool</artifactId>
   <organization>
      <name>Sakai Project</name>
      <url>http://sakaiproject.org/</url>
   </organization>
   <inceptionYear>2007</inceptionYear>
   <description>Profilewow webapp (tool)</description>
   <version>0.1</version>
   <packaging>war</packaging>

   <!-- the base is the parent pom -->
   <parent>
      <groupId>org.sakaiproject</groupId>
      <artifactId>profilewow</artifactId>
      <version>0.1</version>
   </parent>

   <properties>
      <rsfutil.version>0.7.2</rsfutil.version>
      <sakairsf.sakai.version>2.2.x</sakairsf.sakai.version>
      <deploy.webappname>Profilewow</deploy.webappname>
      <appserver.id>${sakai.appserver.id}</appserver.id>
